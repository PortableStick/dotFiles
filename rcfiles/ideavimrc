filetype plugin indent on
set nobackup
set noswapfile
set number
set ruler
set mouse=a
set nocompatible
syntax on
set cursorline
set wrap
set pastetoggle=<F2>
set backspace=indent,eol,start
" Set Proper Tabs
set shiftround
set expandtab
set ignorecase
set smartcase
set conceallevel=0
set relativenumber
nnoremap <F4> :set relativenumber!<CR>
" Enable emulated plugin
set surround
let mapleader = "\<Space>"

" insert new line in normal mode
map <Enter> o<ESC>
map <S-Enter> O<ESC>

" No more escape key!!
nnoremap <C-space> a
imap <C-space> <Esc>
vmap <C-space> <Esc>

nnoremap ; :
vnoremap ; :
nnoremap : ;
vnoremap : ;

command bd :CloseActiveTab
